{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "moduleResolution": "node"
  }
}
